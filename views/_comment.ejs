<div class="comment-div">
    <small>Comments: </small>
    <% for(comment of post.comments){%>
        <div style="background-color: blueviolet; margin-top: 10px;">
            <li>
                <% if(locals.user && (locals.user.id==post.user.id || locals.user.id==comment.user.id)){%>
                    <a href="/comment/delete/<%= comment.id%>"><img
                            src="https://cdn-icons-png.flaticon.com/128/11527/11527826.png" style="width: 30px;" alt="">
                    </a>
                    <%} %>
                        <%= comment.content%>
            </li>
            <small>
                <%= comment.user.name %>
            </small>
        </div>
        <%} %>
</div>